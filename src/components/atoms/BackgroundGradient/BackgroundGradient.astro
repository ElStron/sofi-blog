<style lang="scss" is:global>
@use "@sass/variables" as v;
@use "@sass/mixins" as *;

.backgroud{
	height: 100%;
    position: relative;
    z-index: 1;
    overflow: hidden;
    width: 100%;
    background: #000;
}



.backgroud:after,
.backgroud:before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	height: 100%;
	width: 100%;
	overflow-x: hidden;
	z-index: -10;

}
.backgroud:before{
	@include theme-gradient("ligth");

}
.dark{
	.backgroud:before  {
	  @include theme-gradient("ligth");
  }
  .background:after {
    content: "";
    background-color:v.$color-background-after;
    z-index: -3;
    }
  }
</style>