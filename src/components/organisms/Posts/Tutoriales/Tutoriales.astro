---
import PostCard from "@organisms/Posts/Tutoriales/PostCard/PostCard.astro";
import Title from "@src/components/atoms/Title/Title.astro";
import type { Post } from "@src/types/post.type";
interface Props {
  slug: string;
  name: string;
  posts: Post[];
}

const { slug, name, posts } = Astro.props;
---

<!-- Renderizado de los posts -->
<div class="categories__container">
  <section class="category">
    <a href={`/categories/${slug}`} class="category__link">
      <Title titleDesc={name} class="category__link__title" />
    </a>
    <ul class="link-card-grid">
      {
        posts.slice(0, 4).map((post) => {
          return (
            <li>
              <PostCard {...post} />
            </li>
          );
        })
      }
    </ul>
  </section>
</div>
