---
import BackgroundGradient from "@atoms/BackgroundGradient/BackgroundGradient.astro";
import StickyPost from "../StickyPost/StickyPost.astro";
import SearchForm from "@src/components/molecules/SearchForm/SearchForm.astro";
export const prerender = true;
---

<BackgroundGradient>
  <section class="hero">
    <SearchForm />
    <StickyPost />
  </section>
</BackgroundGradient>

<style lang="scss" is:global>
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    min-height: 100dvh;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    padding-block: 75px;
    writing-mode: horizontal-tb;
  }
</style>
