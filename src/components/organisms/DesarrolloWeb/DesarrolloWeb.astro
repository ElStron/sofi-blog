---
import Title from "@src/components/atoms/Title/Title.astro";
import type { CardPost } from "@src/types/post.type";
interface Props {
  slug: string;
  name: string;
  posts: CardPost[];
}

const { slug, name, posts } = Astro.props;
---

<!-- Renderizado de los posts -->
<div class="categories__container">
  <section class="category__section">
    <a href={`/categories/${slug}`} class="category__title__link">
      <Title titleDesc={name} class="big"  />
    </a>
    <ul class="link-card-grid">
      {
        posts.slice(0, 4).map((post) => {
          return (
            <li>
              <h1>{post.title}</h1>
            </li>
          );
        })
      }
    </ul>
  </section>
</div>
