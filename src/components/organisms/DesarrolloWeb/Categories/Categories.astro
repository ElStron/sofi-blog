---
import type { Category } from "@src/types/category.type";
interface Props {
  categories: Category[];
}
const { categories } = Astro.props;
---

<div class="post-tag__categories">
  {
    categories.map((tag) => {
      return (
        <a class="post-tag__category" class="" href={`/categories/${tag.slug}`}>
          {tag.name}
        </a>
      );
    })
  }
</div>

<style lang="scss">
  @use "@sass/variables" as v;
    .post-tag__categories {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .post-tag__category {
    padding: 0.42rem 0.83rem;
    border-radius: 16px;
    font-size: 1.1rem;
    color: white;
    background: v.$french-violet;
    transition:
      background 0.3s ease-in-out,
      color 0.3s ease-in-out;
    &:hover {
      background: black;
      color: #fff;
    }
  }
</style>
