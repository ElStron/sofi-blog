---
import styles from "./card-sidebar.module.scss";



const { image, title, excerpt } = Astro.props;
---


  <a href="#" class={styles.sideCard} data-astro-prefetch="hover">
    <div class={styles.cardContainer}>
      <img
        src={image.mediaItemUrl || "/img/defaultBanner.png"}
        srcset={image.srcSet}
        sizes={image.sizes}
        alt={image.altText || "Portada del post XD"}
        class={styles.cardImage}
      />
    </div>
    <h3 class={styles.cardTitle}>{title}</h3>
    <p class={styles.cardExcerpt}>{excerpt}</p>
  </a>
