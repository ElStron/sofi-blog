---
import Layout from "@src/layouts/Layout.astro";
import { Content as Policy } from "@content/privacy-policy.md";
export const prerender = true;
---

<Layout title="Privacy Policy">
  <section class="privacy-policy">
    <Policy />
  </section>
</Layout>

<style is:inline  lang="scss">
  @use "@sass/variables" as v;
  @use "@sass/mixins" as  *;
  main {
    margin-top: 0 ;
    max-width: 1100px;
  }
  .privacy-policy {
    color: v.$mainColor;
    margin: 0 auto;
    width: 100%;
    min-height: 100dvh;
    padding: 11rem 3rem 30rem ;
    & a {
      color: v.$mainColor;
    }
    h1{
      color: v.$french-violet;
      font-size: 4rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    h2{
      color: v.$french-violet;
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    ul{
        margin: 2rem 0;
    }
    li{
        margin-left: 5rem;
        font-size: 1.6rem;
        list-style: disc;
    }
  }
</style>
